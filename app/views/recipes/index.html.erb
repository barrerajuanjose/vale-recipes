<div class="container-fluid">
  <h1>Todas tus recetas</h1>
   
  <h4><%= link_to 'Nueva receta', new_recipe_path %></h4>

  <table class="table table-hover">
    <tr>
      <th><%= link_to 'Categoria', recipes_path(sort_by: "category") %></th>
      <th><%= link_to 'Titulo', recipes_path(sort_by: "title") %></th>
      <th colspan="3">Acciones</th>
    </tr>

    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.category %></td>
        <td><%= recipe.title %></td>
        <td>
          <%= link_to 'Mostrar', recipe_path(recipe) %> |
          <%= link_to 'Editar', edit_recipe_path(recipe) %> |
          <%= link_to 'Borrar', recipe_path(recipe),
                method: :delete,
                data: { confirm: 'Estas seguro?' } %>
        </td>
      </tr>
    <% end %>
  </table>
</div>