<h1>Todas tus recetas</h1>
 
<%= link_to 'Nueva receta', new_recipe_path %>

<table>
  <tr>
    <th>Categoria</th>
    <th>Titulo</th>
    <th colspan="3"></th>
  </tr>

  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= recipe.category %></td>
      <td><%= recipe.title %></td>
      <td><%= link_to 'Mostrar', recipe_path(recipe) %></td>
      <td><%= link_to 'Editar', edit_recipe_path(recipe) %></td>
      <td><%= link_to 'Borrar', recipe_path(recipe),
              method: :delete,
              data: { confirm: 'Estas seguro?' } %></td>
    </tr>
  <% end %>
</table>